#include <cstdlib>
#include <iostream>
#include <iomanip>
using namespace std;

/*
 * 
 */
int main(int argc, char** argv) {
    
    bool p;
    bool q;
    
    cout << "p " << "q ";
    cout << "(p&&q) ";
    cout << "(p||q) ";
    cout << "~(p&&q) ";
    cout << "3||5 ";
    cout << "!(p&&q)" << endl;
    
    //define p&q
    p = true;
    q = true;
    
    if(p==true){
       cout << "T ";
    }else(cout << "F ");
   
    if(q==true){
       cout << "T ";
    }else(cout << "F ");
            
    if((p&&q)){
       
       cout << setw(4) << "T ";
    }else(cout << setw(4) << "F ");
    
    if(p||q){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
   
    if(~(p||q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p&&q)||~(p||q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p&&q)||~(p||q) == !(p^q)){
       cout << setw(7) << "T " << endl;
    }else(cout << setw(7) << "F " << endl);
    
    q = false;
    
    if(p==true){
       cout << "T ";
    }else(cout << "F ");
   
    if(q==true){
       cout << "T ";
    }else(cout << "F ");
            
    if((p&&q)){
       
       cout << setw(4) << "T ";
    }else(cout << setw(4) << "F ");
    
    if(p||q){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
   
    if(~(p||q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p&&q)||~(p||q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p&&q)||~(p||q) == !(p^q)){
       cout << setw(7) << "T " << endl;
    }else(cout << setw(7) << "F " << endl);
    
    p = false;
    q = true;
    
    if(p==true){
       cout << "T ";
    }else(cout << "F ");
   
    if(q==true){
       cout << "T ";
    }else(cout << "F ");
            
    if((p&&q)){
       
       cout << setw(4) << "T ";
    }else(cout << setw(4) << "F ");
    
    if(p||q){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
   
    if(~(p||q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p&&q)||~(p||q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p&&q)||~(p||q) == !(p^q)){
       cout << setw(7) << "T " << endl;
    }else(cout << setw(7) << "F " << endl);
    
    q = false;
    
    if(p==true){
       cout << "T ";
    }else(cout << "F ");
   
    if(q==true){
       cout << "T ";
    }else(cout << "F ");
            
    if((p&&q)){
       
       cout << setw(4) << "T ";
    }else(cout << setw(4) << "F ");
    
    if(p||q){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
   
    if(~(p||q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p&&q)||~(p||q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p&&q)||~(p||q) == !(p^q)){
       cout << setw(7) << "T " << endl;
    }else(cout << setw(7) << "F " << endl);
    
    cout << endl;
    
    cout << "p " << "q ";
    cout << "(p||q) ";
    cout << "(p&&q) ";
    cout << "~(p||q) ";
    cout << "3&&5 ";
    cout << "p&&q" << endl;
    
    p = true;
    q = true;
    
    if(p==true){
       cout << "T ";
    }else(cout << "F ");
   
    if(q==true){
       cout << "T ";
    }else(cout << "F ");
            
    if((p||q)){
       
       cout << setw(4) << "T ";
    }else(cout << setw(4) << "F ");
    
    if(p&&q){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
   
    if(~(p&&q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p||q)&&~(p&&q)){
       cout << setw(7) << "T ";
    }else(cout << setw(7) << "F ");
    
    if((p||q)&&~(p&&q) == p&&q){
       cout << setw(7) << "T " << endl;
    }else(cout << setw(7) << "F " << endl);
   

    return 0;
}
